@model MvcSatısProje.Models.TBLADMİN
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>Admin Ekleme Paneli</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .modal-dialog {
            max-width: 700px;
        }

        .modal-header {
            background-color: #0056b3;
            color: white;
            border-bottom: 2px solid #004494;
        }

        .modal-title {
            font-size: 1.75rem;
            font-weight: bold;
        }

        .btn-info {
            background-color: #17a2b8;
            border: none;
            padding: 10px 20px;
            font-size: 1rem;
        }

        .btn-danger {
            background-color: #dc3545;
            border: none;
            padding: 10px 20px;
            font-size: 1rem;
        }

        .form-group label {
            font-weight: bold;
            font-size: 1.1rem;
        }

        .modal-body {
            padding: 30px;
        }
    </style>
</head>
<body>
    <div class="container text-center mt-5">
        <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#Modal1">
            Yeni Admin Tanımla
        </button>
    </div>

    <div class="modal fade" id="Modal1" tabindex="-1" role="dialog" aria-labelledby="adminModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="adminModalLabel">Admin Ekleme Paneli</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form method="post" action="/Admin/YeniAdmin">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="KullaniciAdi">Kullanıcı Adı</label>
                            @Html.TextBoxFor(m => m.kullanici, new { @class = "form-control", placeholder = "Kullanıcı adını giriniz" })
                        </div>
                        <div class="form-group">
                            <label for="Sifre">Şifre</label>
                            @Html.TextBoxFor(m => m.sifre, new { @class = "form-control", placeholder = "Şifrenizi giriniz", type = "password" })
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-info">Kaydet</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Vazgeç</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>