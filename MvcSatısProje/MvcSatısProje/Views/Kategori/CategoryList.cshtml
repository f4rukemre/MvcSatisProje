@model List<MvcSatısProje.Models.TBLKATEGORILER>
@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5 p-4 shadow-sm rounded bg-light">
    <h2 class="text-center mb-4 text-primary">Kategori Yönetimi</h2>
    <table class="table table-hover table-bordered">
        <thead class="bg-primary text-white">
            <tr>
                <th style="width: 10%;">ID</th>
                <th style="width: 50%;">Kategori İsmi</th>
                <th style="width: 20%;">Güncelle</th>
                <th style="width: 20%;">Kaldır</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td class="text-center">@category.ID</td>
                    <td>@category.AD</td>
                    <td class="text-center">
                        <a href="/Kategori/UpdateCategory/@category.ID" class="btn btn-outline-success btn-sm">
                            <i class="fa fa-edit"></i> Güncelle
                        </a>
                    </td>
                    <td class="text-center">
                        <a href="/Kategori/DeleteCategory/@category.ID" class="btn btn-outline-danger btn-sm">
                            <i class="fa fa-trash"></i> Kaldır
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-center mt-3">
        <a href="/Kategori/CreateCategory" class="btn btn-primary">
            <i class="fa fa-plus"></i> Yeni Kategori Ekle
        </a>
    </div>
</div>


