@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<MvcSatısProje.Models.TBLMUSTERILER>
@{
    ViewBag.Title = "MusteriList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5 p-4 shadow-sm rounded bg-light">
    <h2 class="text-center mb-4 text-primary">Müşteri Yönetimi</h2>
    <table class="table table-hover table-bordered">
        <thead class="bg-primary text-white">
            <tr>
                <th style="width: 10%;">ID</th>
                <th style="width: 50%;">AD</th>
                <th style="width: 25%;">SOYAD</th>
                <th style="width: 10%;">ŞEHİR</th>
                <th style="width: 10%;">BAKİYE</th>
                <th style="width: 10%;">Güncelle</th>
                <th style="width: 10%;">Kaldır</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var musterı in Model)
            {
                <tr>
                    <td class="text-center">@musterı.ID</td>
                    <td>@musterı.AD</td>
                    <td>@musterı.SOYAD</td>
                    <td>@musterı.SEHIR</td>
                    <td>@musterı.BAKIYE</td>
                    <td class="text-center">
                        <a href="/Musteri/UpdateMusteri/@musterı.ID" class="btn btn-outline-success btn-sm">
                            <i class="fa fa-edit"></i> Güncelle
                        </a>
                    </td>
                    <td class="text-center">
                        <a href="/Musteri/DeleteMusteri/@musterı.ID" class="btn btn-outline-danger btn-sm">
                            <i class="fa fa-trash"></i> Kaldır
                        </a>
                    </td>
                </tr>
            }

        </tbody>

    </table>
    @Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("MusteriList", new { sayfa }))
    <div class="text-center mt-3">

        <a href="/Musteri/CreateMusteri" class="btn btn-primary">
            <i class="fa fa-plus"></i> Yeni Müşteri Ekle
        </a>
    </div>
</div>

